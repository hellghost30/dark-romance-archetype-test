generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String    @id @default(cuid())
  name                  String?
  email                 String?   @unique
  emailVerified         DateTime?
  image                 String?

  freeAttemptsUsed      Int       @default(0)

  // старе поле можеш лишити, але далі будемо орієнтуватись на дату:
  isPremium             Boolean   @default(false)

  // ✅ головне поле для підписки (контроль доступу)
  subscriptionActiveUntil DateTime?

  accounts              Account[]
  sessions              Session[]
  payments              Payment[]
}

model Payment {
  id        String   @id @default(cuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ✅ mono invoice id (унікально, щоб не зарахувати двічі)
  invoiceId String   @unique

  // наш внутрішній reference (корисно для звʼязки з користувачем/сесією)
  reference String?

  amount    Int      // в копійках (49 грн = 4900)
  ccy       Int      // 980 = UAH
  status    String   // created | processing | success | failure | expired ...

  createdAt DateTime @default(now())
  paidAt    DateTime?

  // сирий payload (для дебагу)
  payload   Json?

  @@index([userId])
  @@index([status])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
